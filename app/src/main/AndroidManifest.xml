<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.niceg.mysqlproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait"/>
        <activity android:name=".SettingsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SchoolInfo"
            android:label="@string/title_activity_school_info"
            android:screenOrientation="portrait"/>
        <activity android:name=".PlayerInfo"
            android:screenOrientation="portrait"/>
        <activity android:name=".TemplatesMenu"
            android:screenOrientation="portrait"/>
        <activity android:name=".NewTemplate"
            android:screenOrientation="portrait"/>
        <activity android:name=".TakeStats"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".NewPlayer"
            android:screenOrientation="portrait"/>
        <activity android:name=".NewUser"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>